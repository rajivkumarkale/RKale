{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "windows": {
                "command": "${workspaceFolder}/engine/build.bat"
            },
            "linux":{
                "command": "${workspaceFolder}/engine/build.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger"
        },
        {
            "type": "shell",
            "label": "Build Testbed",
            "windows": {
                "command": "${workspaceFolder}/testbed/build.bat"
            },
            "linux":{
                "command": "${workspaceFolder}/testbed/build.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/testbed"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceRoot}/build-all.bat"
            },
            "linux":{
                "command": "${workspaceRoot}/build-all.bat"
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}